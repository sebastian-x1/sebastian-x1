import java.util.Random;

public class Die {
    private int sides;
    private int faceValue;
    private Random random;

    // Constructor to create a new n-sided die
    public Die(int sides) {
        if (sides < 2) {
            throw new IllegalArgumentException("A die must have at least 2 sides.");
        }
        this.sides = sides;
        this.random = new Random();
        roll(); // Roll the die when it's created to give it an initial face value.
    }

    // Roll the die and set its face value to a random number between 1 and the number of sides.
    public void roll() {
        faceValue = random.nextInt(sides) + 1;
    }

    // Get the current face value of the die.
    public int getFaceValue() {
        return faceValue;
    }
}
